{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Talk edit</h1>

    <form class="form-horizontal well" action="{{ path('talk_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

    <div class="form-actions">
        <form style="display: inline !important" action="{{ path('talk_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class='btn btn-danger pull-right' type="submit">Delete</button>
        </form>
        <a class='btn btn-primary' href="{{ path('talk') }}">Back to your talks</a>
    </div>

{% endblock %}
