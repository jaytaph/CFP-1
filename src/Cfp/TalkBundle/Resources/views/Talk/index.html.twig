{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Talk list</h1>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Title</th>
                <th>Abstract</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.abstract|truncate(100) }}</td>
                <td>
                        <a class='btn btn-mini btn-primary' href="{{ path('talk_show', { 'id': entity.id }) }}">show</a>
                        <a class='btn btn-mini btn-primary' href="{{ path('talk_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="form-actions">
        <a class='btn btn-primary' href="{{ path('talk_new') }}">Create a new talk</a>
    </div>

{% endblock %}
