{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Biography edit</h1>

    <form class="form-horizontal well" action="{{ path('biography_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit" class="btn btn-primary">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a class='btn btn-primary' href="{{ path('biography') }}">Back to the list</a>
    </li>
    <li>
        <form action="{{ path('biography_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class='btn btn-danger' type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
