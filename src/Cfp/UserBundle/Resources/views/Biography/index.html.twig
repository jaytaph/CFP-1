{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Biography list</h1>

    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Description</th>
                <th>Biography</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.description }}</td>
                <td>{{ entity.biography | truncate(100) }}</td>
                <td>
                    <a class='btn btn-mini btn-primary' href="{{ path('biography_show', { 'id': entity.id }) }}">show</a>
                    <a class='btn btn-mini btn-primary' href="{{ path('biography_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="form-actions">
        <a class='btn btn-primary' href="{{ path('biography_new') }}">Create a new biography</a>
    </div>

{% endblock %}
